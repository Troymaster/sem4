unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, About, Parameters, Processing;

type
  TFormMain = class(TForm)
    MainMenu1: TMainMenu;
    File1: TMenuItem;
    Exit1: TMenuItem;
    Work1: TMenuItem;
    Dialog1: TMenuItem;
    Processing1: TMenuItem;
    Help1: TMenuItem;
    About1: TMenuItem;
    procedure Exit1Click(Sender: TObject);
    procedure About1Click(Sender: TObject);
    procedure Processing1Click(Sender: TObject);
    procedure Dialog1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormMain: TFormMain;
  l:boolean;

implementation

{$R *.dfm}

procedure TFormMain.About1Click(Sender: TObject);
begin
  AboutBox.ShowModal;
end;

procedure TFormMain.Dialog1Click(Sender: TObject);
begin
  Form4:=TForm4.Create(Self);
  Form4.CB1.Checked:=l;
  FormMain.Dialog1.enabled:=false;
  Form4.Show;
end;

procedure TFormMain.Exit1Click(Sender: TObject);
begin
  Close;
end;

procedure TFormMain.Processing1Click(Sender: TObject);
begin
  Form3:=TForm3.Create(self);
  FormMain.Processing1.enabled:=false;
  Form3.Show;
end;

end.
