unit Main;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, About, Parameters, Processing;

type
  TFormMain = class(TForm)
    MainMenu: TMainMenu;
    File1: TMenuItem;
    Exit: TMenuItem;
    Task: TMenuItem;
    Parameters: TMenuItem;
    Processing1: TMenuItem;
    Help: TMenuItem;
    About1: TMenuItem;
    procedure ExitClick(Sender: TObject);
    procedure About1Click(Sender: TObject);
    procedure Processing1Click(Sender: TObject);
    procedure ParametersClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormMain: TFormMain;
  l:boolean;

implementation

{$R *.dfm}

procedure TFormMain.About1Click(Sender: TObject);
begin
  AboutBox.ShowModal;
end;

procedure TFormMain.ParametersClick(Sender: TObject);
begin
  Form_params:=TForm_params.Create(Self);
  Form_params.CB1.Checked:=l;
  FormMain.Dialog1.enabled:=false;
  Form_params.Show;
end;

procedure TFormMain.ExitClick(Sender: TObject);
begin
  Close;
end;

procedure TFormMain.Processing1Click(Sender: TObject);
begin
  Form3:=TForm3.Create(self);
  FormMain.Processing1.enabled:=false;
  Form3.Show;
end;

end.
